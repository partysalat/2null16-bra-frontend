  "description": "JustKile and AstroBra presents: du trinkst!",
  "main": "dutrinkst.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf target/",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "build": "npm run clean & gulp build",
    "watch": "npm run unit:watch & gulp",
    "start": "gulp start",
    "unit:server": "ava src/server/**/*.spec.* --source 'src/server/**/*!(spec).js'",
    "unit:browser": "ava src/browser/**/*.spec.js --source 'src/browser/**/*!(spec).js'",
    "unit:server:watch": "npm run unit:server -- --watch",
    "unit:browser:watch": "npm run unit:browser -- --watch",
    "unit": "npm run unit:server && npm run unit:browser",
    "unit:watch": "npm run unit:server:watch & npm run unit:browser:watch"
  },
  "author": "",
